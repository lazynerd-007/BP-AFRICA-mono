{
  "info": {
    "name": "BluPay Africa - Transaction Analytics",
    "description": "Collection for testing the /transactions/analytics endpoint with proper authentication",
    "version": "1.0.0",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "auth": {
    "type": "bearer",
    "bearer": [
      {
        "key": "token",
        "value": "{{access_token}}",
        "type": "string"
      }
    ]
  },
  "variable": [
    {
      "key": "base_url",
      "value": "https://staging-api.blupayafrica.com/api",
      "type": "string"
    },
    {
      "key": "access_token",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Authentication",
      "item": [
        {
          "name": "Admin Login",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"admin@example.com\",\n  \"password\": \"your_password\",\n  \"userType\": \"administrator\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/auth/login",
              "host": ["{{base_url}}"],
              "path": ["auth", "login"]
            },
            "description": "Login as administrator to get access token for analytics endpoint"
          },
          "response": [],
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    const response = pm.response.json();",
                  "    if (response.data && response.data.access_token) {",
                  "        pm.collectionVariables.set('access_token', response.data.access_token);",
                  "        console.log('Access token saved:', response.data.access_token);",
                  "    }",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ]
        }
      ]
    },
    {
      "name": "Transaction Analytics",
      "item": [
        {
          "name": "Get Analytics - Basic",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{access_token}}",
                "type": "text"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "{{base_url}}/transactions/analytics",
              "host": ["{{base_url}}"],
              "path": ["transactions", "analytics"]
            },
            "description": "Get basic transaction analytics without filters"
          },
          "response": []
        },
        {
          "name": "Get Analytics - With Date Range",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{access_token}}",
                "type": "text"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "{{base_url}}/transactions/analytics?startDate=2024-01-01&endDate=2024-12-31",
              "host": ["{{base_url}}"],
              "path": ["transactions", "analytics"],
              "query": [
                {
                  "key": "startDate",
                  "value": "2024-01-01"
                },
                {
                  "key": "endDate",
                  "value": "2024-12-31"
                }
              ]
            },
            "description": "Get transaction analytics with date range filter"
          },
          "response": []
        },
        {
          "name": "Get Analytics - With Partner Bank Filter",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{access_token}}",
                "type": "text"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "{{base_url}}/transactions/analytics?partnerBankId=partner-bank-id",
              "host": ["{{base_url}}"],
              "path": ["transactions", "analytics"],
              "query": [
                {
                  "key": "partnerBankId",
                  "value": "partner-bank-id",
                  "description": "Replace with actual partner bank ID"
                }
              ]
            },
            "description": "Get transaction analytics filtered by partner bank"
          },
          "response": []
        },
        {
          "name": "Get Analytics - With Status Filter",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{access_token}}",
                "type": "text"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "{{base_url}}/transactions/analytics?status=completed",
              "host": ["{{base_url}}"],
              "path": ["transactions", "analytics"],
              "query": [
                {
                  "key": "status",
                  "value": "completed",
                  "description": "Filter by transaction status: pending, processing, completed, failed, cancelled, reversed"
                }
              ]
            },
            "description": "Get transaction analytics filtered by transaction status"
          },
          "response": []
        }
      ]
    }
  ]
}